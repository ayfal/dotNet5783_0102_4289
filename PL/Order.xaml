<Window x:Class="PL.Order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Order" Height="640" Width="800">
	<StackPanel Orientation="Vertical">
		<StackPanel Orientation="Horizontal">
			<Label Content="ID"/>
			<TextBox Text="{Binding Source={x:Static local:App.cart}, Path=ID}" IsReadOnly="{Binding Owner, Converter={StaticResource WindowToBoolConverter}}"/>			
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<Label Content="Customer Name"/>
			<TextBox Text="{Binding Source={x:Static local:App.cart}, Path=CustomerName}" IsReadOnly="{Binding Owner, Converter={StaticResource WindowToBoolConverter}}"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<Label Content="Customer Email"/>
			<TextBox Text="{Binding Source={x:Static local:App.cart}, Path=CustomerEmail}" IsReadOnly="{Binding Owner, Converter={StaticResource WindowToBoolConverter}}"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<Label Content="Customer Address"/>
			<TextBox Text="{Binding Source={x:Static local:App.cart}, Path=CustomerAddress}" IsReadOnly="{Binding Owner, Converter={StaticResource WindowToBoolConverter}}"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<Label Content="Status"/>
			<TextBox Text="{Binding Source={x:Static local:App.cart}, Path=Status}" IsReadOnly="{Binding Owner, Converter={StaticResource WindowToBoolConverter}}"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<Label Content="Order Date"/>
			<TextBox Text="{Binding Source={x:Static local:App.cart}, Path=OrderDate}" IsReadOnly="{Binding Owner, Converter={StaticResource WindowToBoolConverter}}"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<Label Content="Ship Date"/>
			<TextBox Text="{Binding Source={x:Static local:App.cart}, Path=ShipDate}" IsReadOnly="{Binding Owner, Converter={StaticResource WindowToBoolConverter}}"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<Label Content="Delivery Date"/>
			<TextBox Text="{Binding Source={x:Static local:App.cart}, Path=DeliveryDate}" IsReadOnly="{Binding Owner, Converter={StaticResource WindowToBoolConverter}}"/>
		</StackPanel>
		<StackPanel Orientation="Vertical">
			<Label Content="Items"/>
			<ListView ItemsSource="{Binding Source={x:Static local:App.cart}, Path=Items}" IsReadOnly="{Binding Owner, Converter={StaticResource WindowToBoolConverter}}"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<Label Content="TotalPrice"/>
			<TextBox Text="{Binding Source={x:Static local:App.cart}, Path=TotalPrice}" IsReadOnly="{Binding Owner, Converter={StaticResource WindowToBoolConverter}}"/>
		</StackPanel>
	</StackPanel>
</Window>
