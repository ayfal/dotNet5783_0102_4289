<Window x:Class="PL.Cart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Cart" Height="450" Width="800">
    <Grid>
        <Label Content="Our Products:" HorizontalAlignment="Left" Margin="91,80,0,0" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5"/>
        <ListView x:Name="ListViewCart" Margin="0,106,0,-60" Grid.Row="1" Grid.RowSpan="2" >
            <!--MouseDoubleClick="ListViewCart_MouseDoubleClick"-->
            <!--d:SampleData ItemCount=5-->
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
            <Label Content="Customer Name"/>
            <Label Content="Customer Email"/>
            <Label Content="Customer Address"/>
            <Label Content="Total Price"/>
            <TextBox TextWrapping="Wrap" Text="{Binding Source={x:Static local:App.cart.CustomerName}}" Width="120"/>
        </ListView>
        <Button Content="Add new Product" Grid.Row="2" HorizontalAlignment="Right" Margin="5" Padding="5" />
        <!--Click="Button_Click"-->
    </Grid>
</Window>
